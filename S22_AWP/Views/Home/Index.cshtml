@model S22_AWP.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

@section NoContainerBody {
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="first-slide" src="https://www.emiratesislamic.ae/eng/assets/images/Etihad_Guest_CC_30092022_1920x650_EN.jpg" alt="First slide">
                <div class="container">
                    <div class="carousel-caption col-10 col-md-5 col-xl-4 offset-1 offset-xl-0">
                        <h3>Get up to 175,000 Etihad Guest Bonus Miles & AED 1,500 cashback</h3>
                        <p>Apply for an Emirates Islamic Etihad Guest Card and get up to 175,000 bonus Etihad Guest Miles.</p>
                        <p><a class="btn btn-lg btn-primary" href="#" role="button">Apply Now »</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="second-slide" src="https://www.emiratesislamic.ae/eng/assets/images/Skywards_Cards_Campaign_08092022_1920x650_EN.jpg" alt="Second slide">
                <div class="container">
                    <div class="carousel-caption col-10 col-md-5 col-xl-4 offset-1 offset-xl-0">
                        <h3>Get up to 100,000 bonus Skywards Miles.</h3>
                        <p>Apply & Fly with Emirates Islamic Skywards Credit Cards.</p>
                        <p><a class="btn btn-lg btn-primary" href="#" role="button">Apply Now »</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="third-slide" src="https://www.emiratesislamic.ae/eng/assets/images/Travel_Campaign_Emarati_Family_Savings_Account_1920x650_EN.jpg" alt="Third slide">
                <div class="container">
                    <div class="carousel-caption col-10 col-md-5 col-xl-4 offset-1 offset-xl-0">
                        <h3>Emarati Family Savings Account.</h3>
                        <p>Save today and enjoy a better future.</p>
                        <p><a class="btn btn-lg btn-primary" href="#" role="button">Apply Now »</a></p>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="col-md-12 functions-slider-container">
    <div class="row"><h1>Functions</h1></div>
    <div class="row">
        <div class="col-md-1"><button onclick="scroll_functions(1);" class="float-right">&#10094;</button></div>
        <div class="col-md-10">
            <div class="row functions-slider" id="functions-slider">
                @foreach (var item in Model.Functions)
                {
                    <div class="card">
                        <img class="card-img-top" src="@item.ImagePath" alt="@item.Title">
                        <div class="card-body"><a class="card-title" href="@Url.Action("FunctionDetailView", "Home", new { id = item.ID })">@item.Title</a></div>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-1"><button onclick="scroll_functions(-1);">&#10095;</button></div>
    </div>
</div>

@section Scripts{
    <script>
        function scroll_functions(val) {
            const functionsContainerEl = document.getElementById('functions-slider');
            const scrollStep = val * 500;
            let sl = functionsContainerEl.scrollLeft;
            if ((sl - scrollStep) <= 0) {
                functionsContainerEl.scrollTo(0, 0);
            } else {
                functionsContainerEl.scrollTo((sl - scrollStep), 0);
            }
        }
    </script>
}
